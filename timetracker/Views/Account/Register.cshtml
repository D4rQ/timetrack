@using Timetracker.ViewModels;
@model RegisterVM

@{
    ViewData["Title"] = "Register";
    Layout = null;
}

<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="UTF-8">
    <title>Регистрация на TimeTracker</title>
    <link rel="stylesheet" href="~/css/registration.css">
</head>
<body>
    <div class="wrapper">
        <div class="registration-form">
            <div class="logo">
                <img src="/images/timetracker_logo.png" alt="TimeTracker Logo">
            </div>
            <h1>Регистрация</h1>
            <form asp-action="Register" method="post" asp-route-returnurl="@ViewData[" ReturnUrl"]">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="inputbox">                  
                    <input asp-for="Username"  id="email" placeholder="Имя пользователя" required>
                    <span asp-validation-for="Username" class="text-danger"></span>
                </div>
                <div class="inputbox">
                    <input asp-for="Password" type="password" id="password" placeholder="Пароль" required>
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="inputbox">
                    <input asp-for="ConfirmPassword" type="password" id="password-repeat" placeholder="Повторите пароль" required>
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>
                <div class="inputbox">
                    <button type="submit">Зарегистрироваться</button>
                </div>
                <p class="login-link">Есть аккаунт? <a asp-action="Login" asp-route-returnurl="@ViewData[" ReturnUrl"]">Войти</a></p>
            </form>
        </div>
    </div>
</body>
</html>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}