<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="UTF-8">
    <title>Войти</title>
    <link rel="stylesheet" href="/css/login.css">

</head>
<body>
    <div class="wrapper">
        <div class="registration-form">
            <div class="logo">
                <img src="/images/timetracker_logo.png" alt="TimeTracker Logo">
            </div>
            <form asp-action="Login" method="post" asp-route-returnurl="@ViewData["ReturnUrl"]">
            <div asp-validation-summary="ModelOnly"></div>
                <div class="inputbox">
                    <input asp-for="Username" placeholder="Имя пользователя" required/>
                    <span asp-validation-for="Username" class="text-danger"></span>
                </div>
                <div class="inputbox">
                    <input asp-for="Password" placeholder="Пароль" required/>
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div style="text-align:center; padding: 0 0 10px 0">
                <input asp-for="RememberMe" style="width:min-content"/>
                <label asp-for="RememberMe"></label>
                </div>
                <div class="inputbox">
                    <input type="submit" value="Войти"/>
                </div>
                <div style="text-align:center; padding: 10px">
                    <a asp-action="Register" class="text-decoration-none float-start mt-2" asp-route-returnurl="@ViewData["ReturnUrl"]">Еще не зарегистрированы?</a>
                </div>
            </form>
        </div>
    </div>
</body>
</html>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
